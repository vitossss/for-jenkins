#!groovy 
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage('Crate a docker image') {
            steps {
                echo "Build was started"
                dir ('docker') {
                    sh 'docker build . '
                }
            }
        }
    }
}
