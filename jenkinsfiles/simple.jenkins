#!groovy 
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
    agent any
    stages {
        stage('Build a docker image') {
            steps {
                dir('docker') {
                    sh 'docker build -t hello .' 
                }
            }
        }
        stage('Run docker image') {
            steps {
                dir('docker') {
                    sh 'docket run --rm hello'
                }
            }
        }
    }
}
